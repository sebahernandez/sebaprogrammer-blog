---
import Layout from '../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

// Obtener todos los posts
const allPosts = await getCollection('posts');

// Filtrar solo las entradas de Sebastián Lagos
const sebastianPosts = allPosts.filter((post: CollectionEntry<'posts'>) => post.data.author === 'sebastian-lagos') as CollectionEntry<'posts'>[];

// Ordenar por fecha de publicación (más reciente primero)
sebastianPosts.sort((a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf());
---

<Layout>
	<div class="max-w-6xl mx-auto px-4 py-8">
		<section>
			<h2 class="text-2xl font-bold text-gray-800 mb-6">Publicaciones de Sebastián Lagos</h2>
			
			{sebastianPosts.length === 0 ? (
				<p class="text-gray-600">No hay publicaciones disponibles de este autor.</p>
			) : (
				<ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
					{sebastianPosts.map(post => (
						<li class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300">
							<div class="flex flex-col h-full">
								{post.data.image && (
									<img src={post.data.image.url} alt={post.data.image.alt} class="w-full h-48 object-cover" />
								)}
								<div class="p-6 flex flex-col flex-grow">
									<h3 class="text-xl font-semibold text-gray-900 mb-2">{post.data.title}</h3>
									<p class="text-sm text-gray-500 mb-3">Publicado el: {new Date(post.data.pubDate).toLocaleDateString('es-ES')}</p>
									<p class="text-gray-700 mb-4 flex-grow">{post.data.description}</p>
									<a href={`/posts/${post.slug}`} class="mt-auto inline-block bg-purple-700 hover:bg-purple-800 text-white py-2 px-4 rounded-md transition-colors duration-200">Leer más</a>
								</div>
							</div>
						</li>
					))}
				</ul>
			)}
		</section>
	</div>
</Layout>

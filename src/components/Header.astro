---
// Importa las imágenes o logos que necesites
---

<header class="fixed w-full bg-white shadow-md z-50 transition-all duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <!-- Logo y nombre del blog -->
      <div class="flex items-center">
        <a href="/" class="flex-shrink-0 flex items-center">
          <img class="h-8 w-auto" src="/favicon.svg" alt="Logo" />
          <span class="ml-2 text-xl font-bold text-purple-700">sebaprogrammer</span>
        </a>
      </div>
      
      <!-- Navegación principal -->
      <nav class="hidden md:flex space-x-8 items-center">
        <a href="/" class="text-gray-600 hover:text-purple-700 hover:border-b-2 hover:border-purple-700 px-3 py-2 text-sm font-medium transition-all duration-200">Inicio</a>
        <a href="/about/" class="text-gray-600 hover:text-purple-700 hover:border-b-2 hover:border-purple-700 px-3 py-2 text-sm font-medium transition-all duration-200">Sobre mí</a>
        <a href="/blog/" class="text-gray-600 hover:text-purple-700 hover:border-b-2 hover:border-purple-700 px-3 py-2 text-sm font-medium transition-all duration-200">Blog</a>
      </nav>
      
      <!-- Botón de búsqueda y perfil (para versión desktop) -->
      <div class="hidden md:flex items-center space-x-4">
        <button class="bg-white p-2 rounded-full text-gray-500 hover:text-purple-700 focus:outline-none focus:ring-2 focus:ring-purple-500">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
        <a href="/autores/sebastian-lagos" class="flex items-center space-x-1">
          <img class="h-8 w-8 rounded-full object-cover" src="/images/sebastian-lagos.jpeg" alt="Foto de perfil" />
          <span class="text-sm font-medium text-gray-700">Sebastián</span>
        </a>
      </div>
      
      <!-- Menú hamburguesa para móvil -->
      <div class="md:hidden flex items-center">
        <button type="button" class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-500 hover:text-purple-700 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-purple-500" aria-expanded="false">
          <span class="sr-only">Abrir menú principal</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Menú móvil, oculto por defecto -->
  <div class="mobile-menu hidden md:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <a href="/" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-purple-700 hover:bg-gray-50">Inicio</a>
      <a href="/about/" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-purple-700 hover:bg-gray-50">Sobre mí</a>
      <a href="/blog/" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-purple-700 hover:bg-gray-50">Blog</a>
    </div>
    <div class="pt-4 pb-3 border-t border-gray-200">
      <div class="flex items-center px-5">
        <div class="flex-shrink-0">
          <img class="h-10 w-10 rounded-full object-cover" src="/images/sebastian-lagos.jpeg" alt="Foto de perfil" />
        </div>
        <div class="ml-3">
          <div class="text-base font-medium text-gray-800">Sebastián Lagos</div>
          <div class="text-sm font-medium text-gray-500">Fullstack Developer</div>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Script para control del menú móvil -->
<script>
  // Código para abrir/cerrar el menú móvil
  const mobileMenuButton = document.querySelector('.mobile-menu-button');
  const mobileMenu = document.querySelector('.mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  // Efecto de scroll para el header
  const header = document.querySelector('header');
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      header?.classList.add('h-14');
      header?.classList.add('shadow-lg');
    } else {
      header?.classList.remove('h-14');
      header?.classList.remove('shadow-lg');
    }
  });
</script>

<!-- Spacer para compensar el header fijo -->
<div class="h-16"></div>
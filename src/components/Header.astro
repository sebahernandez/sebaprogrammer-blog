<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo y nombre del sitio -->
      <div class="flex items-center">
        <a href="/" class="flex items-center">
          <span class="ml-2 text-xl font-bold text-purple-700">SEBAPROGRAMMER</span>
        </a>
      </div>
      
      <!-- Navegación principal - Desktop -->
      <nav class="hidden md:flex space-x-8">
        <a href="/" class="text-gray-700 hover:text-purple-700 px-3 py-2 text-sm font-medium transition-colors">Inicio</a>
        <a href="/tags/todos/1" class="text-gray-700 hover:text-purple-700 px-3 py-2 text-sm font-medium transition-colors">Blog</a>
        <a href="/about" class="text-gray-700 hover:text-purple-700 px-3 py-2 text-sm font-medium transition-colors">Sobre mí</a>
      </nav>
      
      <!-- Botón de contacto -->
      <div class="hidden md:block">
        <a href="/about#contact" class="bg-purple-600 text-white hover:bg-purple-700 px-4 py-2 rounded-lg text-sm font-medium transition-colors shadow-sm">
          Contacto
        </a>
      </div>
      
      <!-- Menú móvil -->
      <div class="md:hidden">
        <button id="menu-toggle" class="text-gray-500 hover:text-gray-700 focus:outline-none">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Menú móvil expandible -->
    <div id="mobile-menu" class="md:hidden hidden pb-4">
      <div class="flex flex-col space-y-2">
        <a href="/" class="text-gray-700 hover:text-purple-700 px-2 py-2 text-sm font-medium">Inicio</a>
        <a href="/tags/todos/1" class="text-gray-700 hover:text-purple-700 px-2 py-2 text-sm font-medium">Blog</a>
        <a href="/about" class="text-gray-700 hover:text-purple-700 px-2 py-2 text-sm font-medium">Sobre mí</a>
        <a href="/about#contact" class="bg-purple-600 text-white hover:bg-purple-700 px-3 py-2 rounded-lg text-sm font-medium inline-block w-full text-center mt-2">
          Contacto
        </a>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  // Uso de is:inline para que el script se ejecute inmediatamente sin esperar DOMContentLoaded
  // Esto evita el pestañeo durante la navegación
  
  // Verificamos si estamos en un contexto de navegación (cliente)
  if (typeof window !== 'undefined') {
    // Función para inicializar el toggle del menú
    function initMenuToggle() {
      const menuToggle = document.getElementById('menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');
      
      if (menuToggle && mobileMenu) {
        // Verificamos si ya tiene el evento para evitar duplicados
        if (!menuToggle.hasAttribute('data-initialized')) {
          menuToggle.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
          });
          // Marcamos como inicializado
          menuToggle.setAttribute('data-initialized', 'true');
        }
      }
    }
    
    // Inicializar inmediatamente y también en DOMContentLoaded por seguridad
    initMenuToggle();
    
    document.addEventListener('astro:page-load', initMenuToggle);
    document.addEventListener('DOMContentLoaded', initMenuToggle);
  }
</script>